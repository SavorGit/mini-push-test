/* pages/template/navigation.wxss */

.bottom_nav {
  width: 100vw;
  height: 138rpx;
  display: flex;
  flex-direction: row;
  background-color: #f6f3ee;
}

.bottom_nav > navigator {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 40%;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0);
}

.bottom_nav > navigator > image {
  margin-top: 20rpx;
  margin-bottom: 8rpx;
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  z-index: 999;
}

.bottom_nav > navigator > label {
  margin-top: 75rpx;
  position: absolute;
  z-index: 999;
}

.bottom_nav > navigator.special {
  margin-top: -60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 40%;
  box-sizing: border-box;
  z-index: 999;
}

.bottom_nav > navigator.special > image {
  /* margin-top: -60rpx; */
  margin-bottom: 8rpx;
  padding: 18rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  z-index: 999;
}

.bottom_nav > navigator.special > label {
  margin-top: 135rpx;
  position: absolute;
  z-index: 999;
}

.bottom_nav > view {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 40%;
  box-sizing: border-box;
}

.bottom_nav > view > image {
  margin-top: 20rpx;
