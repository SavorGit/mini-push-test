}

.bottom_nav > view.special {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 40%;
  box-sizing: border-box;
}

.bottom_nav > view.special > image {
  margin-top: -60rpx;
  margin-bottom: 8rpx;
